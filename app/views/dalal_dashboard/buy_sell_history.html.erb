<% content_for :page_wrapper do %>
        <div id="page-wrapper">
            <div class="container-fluid">
                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            Dalal Street <small>Mortgage</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li class="active">
                             <i class="fa fa-dashboard"></i> Dalal Street
                            </li>
                            <li class="active">
                             <i class="fa fa-dashboard"></i> Bid Sell History
                            </li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->

                
                <%= render partial:"dalal_dashboard/partials/panel_dashboard_partial",locals: { stocks_list: @stocks_list, market_events_total: @market_events_total,price_of_tot_stock: @price_of_tot_stock, user_current_cash: @user_current_cash }%>
                                
                
                <div class="row">
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Buy History</h3>
                            </div>
                            <div class="panel-body">
                                <div class="list-group">
                                <% if @no_buy_history.blank? -%>
                                <%= "You have not bid for stocks yet." %>
                                <% else -%>
                                <% @buy_history.each do |buy|%>
                                <a href="#" class="list-group-item">
                                <span class="badge"><%= buy.updated_at%></span>
                                <i class="fa fa-fw fa-check"></i>Bid for <%= buy.numofstock%> stocks of <% @stockname = Stock.select('stockname').where('id'=>buy.stock_id).first %><%=@stockname.stockname%> at $<%= buy.price%> per share</a>
                                <% end %>
                                <% end -%>
                                </div>
                                <div class="text-right">
                                    <a href="#">View All Activity <i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Sell History</h3>
                            </div>
                            <div class="panel-body">
                                <div class="list-group">
                                <% if @no_sell_history.blank? -%>
                                <%= "You have not put up stocks for sale yet." %>
                                <% else -%>
                                <% @sell_history.each do |sell|%>
                                <a href="#" class="list-group-item">
                                <span class="badge"><%= sell.updated_at%></span>
                                <i class="fa fa-fw fa-check"></i>Ask for <%= sell.numofstock%> stocks of <% @stockname = Stock.select('stockname').where('id'=>sell.stock_id).first %><%=@stockname.stockname%> at $<%= sell.priceexpected%> per share</a>
                                <% end -%>
                                <% end -%>
                                </div>
                                <div class="text-right">
                                    <a href="#">View All Activity <i class="fa fa-arrow-circle-right"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->
<% end %>

<% content_for :script do %>
      <script type="text/javascript">
      </script>

<% end %>    
